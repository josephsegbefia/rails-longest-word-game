<div class="container game-container">
  <h1>New game</h1>
  <ul class = "random-letters">
    <% @letters.each do |letter| %>
      <li class="letter"><%= letter %></li>
    <% end %>
  </ul>
  <div class = "form-container">
    <div class="row justify-content-center">
      <form action="/score" method = "POST" data-turbo="false" id = "form-element">
        <label for="word" class="form-label">What is the longest word you can find?</label>
        <div class = "input-and-button">
          <input type="text" class = "form-control input-space" name = "word" id = "word" value="<%= params[:word]%>">
          <input class = "button" type="submit" value="Play">
        </div>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <%= hidden_field_tag :letters, @letters %>
      </form>
    </div>
  </div>
</div>
